@using quizzer.Components.Pages.Teacher;
@page "/teacher/dashboard"

<PageTitle>Quizzer - Teacher Dashboard</PageTitle>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0">Quizzer - Teacher Dashboard</h2>
            @if (!string.IsNullOrEmpty(TeacherEmail))
            {
                <p class="text-muted mb-0">Welcome, @TeacherEmail</p>
            }
        </div>
    </div>

    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <button class="nav-link @(ActiveTab == EnumDashboardTab.Tests ? "active" : "")"
                    @onclick="() => SwitchTab(EnumDashboardTab.Tests)">
                <i class="bi bi-journal-text me-1"></i> Tests
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link @(ActiveTab == EnumDashboardTab.Periods ? "active" : "")"
                    @onclick="() => SwitchTab(EnumDashboardTab.Periods)">
                <i class="bi bi-people-fill me-1"></i> Periods
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link @(ActiveTab == EnumDashboardTab.Courses ? "active" : "")"
                    @onclick="() => SwitchTab(EnumDashboardTab.Courses)">
                <i class="bi bi-easel3-fill me-1"></i> Courses
            </button>
        </li>
    </ul>

    @if (ActiveTab == EnumDashboardTab.Tests)
    {
        <DashboardTests></DashboardTests>
    }
    else if (ActiveTab == EnumDashboardTab.Periods)
    {
        <DashboardPeriods></DashboardPeriods>
    }
    else if (ActiveTab == EnumDashboardTab.Courses)
    {
        <DashboardCourses></DashboardCourses>
    }
</div>
